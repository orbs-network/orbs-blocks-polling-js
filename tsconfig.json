{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist",
    "target": "esnext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "lib": ["esnext", "esnext.bigint"],
    "types": ["jest"]
  },
  "include": ["src/index.ts", "src/__tests__/*.test.ts", "src/globals.d.ts"]
}
